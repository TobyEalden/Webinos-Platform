extends layout

block content
  div(id="loginPage", data-role="content", data-theme="c")
    img(src='/images/logo.png', style='float:left;padding-right:10px;')
    p 
      strong Welcome 
      | to the UbiApps PZH Farm. Please choose an authentication provider and sign in.
    div(id="login-choice")
      a(id="googleAuth",href="/auth/google",data-role="button",rel="external")
        img(src='https://ssl.gstatic.com/images/logos/google_logo_41.png', width='100px')
      a(id="yahooAuth",href="/auth/yahoo",data-role="button",rel="external")
        img(src='http://l.yimg.com/a/images/ww/met/slimheader/yahoo-logo-sm-png8.png', width='100px')
