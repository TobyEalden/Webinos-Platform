!!! 5
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/js/jquery/jquery.mobile-1.2.0.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/jquery/jquery-1.8.2.min.js')
    script(src='/js/jquery/jquery.mobile-1.2.0.min.js')
    script
      $( document ).delegate("##{id}", "pageinit", function() {
      });
    title #{title}
    block head
  body
    div(id='#{id}',data-role='page',data-theme="b")
      div(data-role='header',data-theme="b")
        h1 #{title}
        - if (id !== "home") {
          a(href="/",data-role="button",data-icon="home",data-iconpos="notext",data-transition="slide") home
          a(href="#",data-rel="back",data-role="button",data-icon="back",data-iconpos="notext",data-transition="slide") back
        - }
      block content
      div(data-role='footer', data-theme="b")
        - if (typeof serverName !== "undefined") {
          p(style="float:right") #{serverName}&nbsp;
        - }        
        p &nbsp;#{appTitle}
